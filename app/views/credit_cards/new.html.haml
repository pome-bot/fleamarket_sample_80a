.Header
  .Header__logo
    = link_to "#" do
      = image_tag ("logo.png")
.CreditMain
  .CreditMain__title
    %h1 クレジットカード入力画面
  .CreditMain__contents
    .Credit__form
      = form_with(local: true, method: :post) do |f|
        .Credit__number
          %label カード番号
          %span 必須
          %br/
          =f.text_field :card_number,class: "Credit__form__input", placeholder: "半角数字のみ", maxlength: "16"
          %ul.Credit__list
            %li
              = image_tag('Visa.svg')
            %li
              = image_tag('Master.png')
            %li
              = image_tag('discover.png')
            %li
              = image_tag('JCB.png')
            %li
              = image_tag('amex.svg')
            %li
              = image_tag('Diners.png')
        .Credit__exp
          %label 有効期限
          %span 必須
          %br/
          %select#exp_mouth{type: "text"}
            %option{value: ""}--
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %label 月
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
            %option{value: "2030"}30
            %option{value: "2031"}31
          %label 年
        .Security__code
          %label セキュリティコード
          %span 必須
          =f.text_field :security_code,class: "Credit__form__input", placeholder: "カード背面3~4桁の番号", maxlength: "4"
          .Security__code__question 
            %p.question ?
            %p カードの背面の番号とは？
        .Credit__token
          = submit_tag "登録する", class: "Register__btn"

