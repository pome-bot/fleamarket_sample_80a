= render partial: 'layouts/header'
.SendingMain
  .SendingMain__content
    %h2.SendingMain__content__title
      会員情報入力
    .SendingMain__content__form
      .Content__items
        =form_with   model: @address, local: true do  |form|
          .SendingMain__group
            = form.label '送付先氏名'
            %span.SendingMain__group__require
              必須
            .SendingMain__group__box
              =form.text_field  :family_name, placeholder: '例）岡崎', class: 'Sending__input__left'
              =form.text_field  :first_name, placeholder: '例）光輝', class: 'Sending__input__right'

          .SendingMain__group
            = form.label '送付先氏名カナ'
            %span.SendingMain__group__require
              必須
            .SendingMain__group__box
              =form.text_field  :family_name_kana, placeholder: '例）オカザキ', class: 'Sending__input__left'
              =form.text_field  :first_name_kana, placeholder: '例）ミツテル', class: 'Sending__input__right'

          .SendingMain__group
            = form.label '郵便番号'
            %span.SendingMain__group__require
              必須
            =form.text_field  :postcode, placeholder: '例）810-0810', class: 'Sending__input'

          .SendingMain__group
            = form.label '都道府県'
            %span.SendingMain__group__require
              必須
            = form.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: ''

          .SendingMain__group
            = form.label '市町村'
            %span.SendingMain__group__require
              必須
            =form.text_field  :city, placeholder: '例）福岡市', class: 'Sending__input'

          .SendingMain__group
            = form.label '番地'
            %span.SendingMain__group__require
              必須
            =form.text_field  :house_number, placeholder: '例）博多区中洲5丁目4-18', class: 'Sending__input'

          .SendingMain__group
            = form.label '建物名 任意'
            =form.text_field  :building_name, placeholder: '例）吉本ビル101', class: 'Sending__input'

          .SendingMain__group
            = form.label '電話番号 任意'
            =form.text_field  :phone_number, placeholder: '例）090-××××-××××', class: 'Sending__input'
            
          .SendingMain__group
            =form.submit '登録', class: 'signUp-btn'